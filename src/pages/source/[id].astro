---
// 1. 获取 URL 参数
const { id } = Astro.params;
const db = Astro.locals.runtime.env.cpporigin;

// 2. 查询文章详情
const post = await db.prepare('SELECT * FROM cppOriginContent WHERE id = ?').bind(id).first();

if (!post) {
    return new Response('404: 文章不存在', { status: 404 });
}
---

<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{post.title}</title>

    <!-- 1. 引入 VS Code Dark Plus 主题样式 (这是最接近截图的配色) -->
    <link href="https://cdn.jsdelivr.net/npm/prism-themes@1.9.0/themes/prism-vsc-dark-plus.min.css" rel="stylesheet" />

    <!-- 2. 引入 Prism 核心和 C++ 语言包 (必须按顺序引入) -->
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-core.min.js"></script>
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-clike.min.js"></script>
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-c.min.js"></script>
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-cpp.min.js"></script>

    <style>
        /* --- 全局深色编辑器风格 --- */
        body {
            /* VS Code 默认背景色 */
            background-color: #1e1e1e;
            margin: 0;
            padding: 0;
            /* 典型的编程字体栈 */
            font-family: 'Consolas', 'Monaco', 'Andale Mono', 'Ubuntu Mono', monospace;
            color: #d4d4d4; /* 浅灰色文字，不刺眼 */
            line-height: 1.5;
        }

        /* --- 顶部导航栏 (保持深色风格) --- */
        nav {
            background-color: #252526; /* 稍微亮一点的深色 */
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #3e3e42;
        }

        /* --- 按钮样式 (复刻截图的霓虹边框) --- */
        .btn {
            text-decoration: none;
            padding: 6px 16px;
            border-radius: 2px;
            font-size: 14px;
            font-family: sans-serif; /* 按钮文字可以用无衬线体 */
            transition: background 0.2s;
        }

        .btn-cyan {
            border: 1px solid #00E5FF;
            color: #00E5FF;
        }
        .btn-cyan:hover { background-color: rgba(0, 229, 255, 0.1); }

        .btn-green {
            border: 1px solid #00FF00;
            color: #00FF00;
        }
        .btn-green:hover { background-color: rgba(0, 255, 0, 0.1); }

        /* --- 标题区域 --- */
        header {
            text-align: center;
            padding: 20px 0;
            border-bottom: 1px solid #333;
        }
        h1 {
            font-size: 1.5rem;
            color: #569cd6; /* VS Code 蓝色关键字颜色 */
            margin: 0;
            font-weight: normal;
        }

        /* --- 代码内容区域 --- */
        .code-container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px;
        }

        /* 强制覆盖 Prism 的默认背景，确保无缝融合 */
        pre[class*="language-"], code[class*="language-"] {
            background: transparent !important;
            text-shadow: none !important;
            font-size: 16px; /* 调整字号使其更像编辑器 */
            padding: 0 !important;
            margin: 0 !important;
        }

        /* 绿色注释 - 强制修正 (有时主题库会有差异) */
        .token.comment {
            color: #6a9955 !important;
        }
    </style>
</head>
<body>

    <nav>
        <a href={`/category/${post.category_id}`} class="btn btn-cyan">返回上一页</a>
        <a href="/" class="btn btn-green">返回首页</a>
    </nav>

    <header>
        <h1>{post.title}</h1>
    </header>

    <div class="code-container">
        <!--
           关键点：
           1. <pre> 和 <code> 标签组合
           2. class="language-cpp" 告诉 Prism 这是 C++ 代码
        -->
        <pre><code class="language-cpp">{post.content}</code></pre>
    </div>

</body>
</html>