import type { D1Database } from '@cloudflare/workers-types';

// --- 后端逻辑 (保持不变) ---
const runtime = Astro.locals.runtime;
let db: D1Database | null = null;
let errorMsg = "";
let dataList: any[] = [];
let totalCount = 0;

if (runtime && runtime.env && runtime.env.cpporigin) {
    db = runtime.env.cpporigin as D1Database;
}

const page = parseInt(Astro.url.searchParams.get('page') || '1');
const pageSize = 10;
const offset = (page - 1) * pageSize;

if (db) {
    try {
        const result = await db.prepare(
            "SELECT * FROM cpporigin ORDER BY key DESC LIMIT ? OFFSET ?"
        ).bind(pageSize, offset).all();
        dataList = result.results;

        const countRes = await db.prepare("SELECT COUNT(*) as count FROM cpporigin").first();
        totalCount = countRes?.count as number || 0;
    } catch (e: any) {
        errorMsg = "数据库错误: " + e.message;
    }
} else if (!runtime) {
    errorMsg = "本地模式：未检测到 Runtime";
}

const totalPages = Math.ceil(totalCount / pageSize);
const hasPrev = page > 1;
const hasNext = page < totalPages;

function formatTime(val: any) {
    if (!val) return '-';
    if (typeof val === 'number') return new Date(val * 1000).toISOString().split('T')[0];
    return val;
}
---

<html lang="zh-cn">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>C++ Source Viewer</title>
    <!-- 使用 PrismJS 的这一款主题，对比度较高 -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism-tomorrow.min.css" rel="stylesheet" />
</head>
<body>

<!-- 背景层 -->
<div class="bg-image"></div>

<main class="main-container">
    <h1 class="title">C++ Source Origins</h1>

    {errorMsg && <div class="error-msg">{errorMsg}</div>}

    <div class="list-container">
        {dataList.map((item) => (
                <div class="code-card">
                    <div class="card-header">
                        <span class="key-badge">#{item.key}</span>
                        <span class="time-badge">{formatTime(item.timestamp || item.created_at)}</span>
                    </div>

                    <!-- 代码容器 -->
                    <div class="code-box">
                        <!-- 注意：class="language-cpp" 用于高亮 -->
                        <pre><code class="language-cpp">{item.content || item.value || "// 无内容"}</code></pre>
                    </div>
                </div>
        ))}
    </div>

    <div class="pagination">
        {hasPrev ? <a href={`?page=${page - 1}`} class="nav-btn">← 上一页</a> : <span class="nav-btn disabled">← 上一页</span>}
        <span class="page-num">{page} / {totalPages}</span>
        {hasNext ? <a href={`?page=${page + 1}`} class="nav-btn">下一页 →</a> : <span class="nav-btn disabled">下一页 →</span>}
    </div>
</main>

<!-- PrismJS 核心与 C++ 语言包 -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/prism.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-c.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-cpp.min.js"></script>
</body>
</html>

<style>
/* === 1. 全局重置 === */
* { box-sizing: border-box; margin: 0; padding: 0; }

body {
    font-family: Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace;
    background-color: #0d1117;
    color: #c9d1d9;
    min-height: 100vh;
    position: relative;
}

/* === 2. 背景图片设置 === */
.bg-image {
    position: fixed;
    top: 0; left: 0; width: 100%; height: 100%;
    z-index: -1;
    /* 这里替换为你喜欢的背景图链接 */
    background-image: url('/preview');
    background-size: cover;
    background-position: center;
    /* 叠加黑色遮罩，让代码更清晰 */
    background-color: rgba(0, 0, 0, 0.75);
    background-blend-mode: darken;
}

/* === 3. 布局 === */
.main-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 40px 20px;
}

.title {
    text-align: center;
    margin-bottom: 30px;
    font-size: 2rem;
    color: #fff;
    text-shadow: 0 4px 10px rgba(0,0,0,0.5);
}

/* === 4. 核心：代码卡片样式 === */
.code-card {
    background: rgba(22, 27, 34, 0.85); /* 深色半透明底 */
    backdrop-filter: blur(12px);         /* 毛玻璃模糊 */
    border: 1px solid rgba(48, 54, 61, 0.8);
    border-radius: 8px;
    margin-bottom: 25px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
    overflow: hidden; /* 防止内容溢出圆角 */
}

.card-header {
    padding: 12px 16px;
    background: rgba(255, 255, 255, 0.05);
    border-bottom: 1px solid rgba(48, 54, 61, 0.8);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.key-badge {
    font-weight: bold;
    color: #58a6ff; /* 蓝色高亮 ID */
    font-size: 1.1em;
}

.time-badge {
    font-size: 0.85em;
    color: #8b949e;
}

/* === 5. 核心：代码区域控制 (解决不换行问题) === */
.code-box {
    position: relative;
    /* 限制最大高度，超过则显示垂直滚动条 */
    max-height: 400px;
    overflow-y: auto;  /* 允许垂直滚动 */
    overflow-x: hidden; /* 禁止横向滚动 */
    padding: 0;
}

/*
重要：强制覆盖 PrismJS 的默认样式
pre-wrap: 保留空格但允许自动换行
break-all: 强制打断长单词，防止溢出
*/
.code-box pre {
    margin: 0 !important;
    padding: 15px !important;
    background: transparent !important;
    white-space: pre-wrap !important;
    word-wrap: break-word !important;
    word-break: break-all !important;
}

.code-box code {
    font-family: 'JetBrains Mono', Consolas, monospace !important;
    font-size: 14px;
    line-height: 1.5; /* 增加行间距，防止太紧 */
    white-space: pre-wrap !important; /* 确保 code 标签也换行 */
    word-break: break-all !important;
    text-shadow: none !important;
}

/* === 6. 分页按钮 === */
.pagination {
    display: flex;
    justify-content: center;
    gap: 15px;
    margin-top: 40px;
    align-items: center;
}

.nav-btn {
    padding: 8px 16px;
    background-color: #21262d;
    color: #c9d1d9;
    text-decoration: none;
    border: 1px solid #30363d;
    border-radius: 6px;
    transition: all 0.2s;
}

.nav-btn:hover:not(.disabled) {
    background-color: #30363d;
    border-color: #8b949e;
    color: #fff;
}

.nav-btn.disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

/* === 7. 滚动条美化 === */
.code-box::-webkit-scrollbar { width: 8px; }
.code-box::-webkit-scrollbar-track { background: transparent; }
.code-box::-webkit-scrollbar-thumb { background: #484f58; border-radius: 4px; }
.code-box::-webkit-scrollbar-thumb:hover { background: #6e7681; }
</style>