import type { D1Database } from '@cloudflare/workers-types';

// --- 1. 后端逻辑保持不变 ---
const runtime = Astro.locals.runtime;
let db: D1Database | null = null;
let errorMsg = "";
let dataList: any[] = [];
let totalCount = 0;

if (runtime && runtime.env) {
    if (runtime.env.cpporigin) {
        db = runtime.env.cpporigin as D1Database;
    }
}

const page = parseInt(Astro.url.searchParams.get('page') || '1');
const pageSize = 10;
const offset = (page - 1) * pageSize;

if (db) {
    try {
        // 假设存放代码的字段叫做 'content' 或者 'value'，请根据你数据库实际字段修改
        // 这里我假设列名是 'content'
        const result = await db.prepare(
            "SELECT * FROM cpporigin ORDER BY key DESC LIMIT ? OFFSET ?"
        ).bind(pageSize, offset).all();
        dataList = result.results;
        const countRes = await db.prepare("SELECT COUNT(*) as count FROM cpporigin").first();
        totalCount = countRes?.count as number || 0;
    } catch (e: any) {
        errorMsg = "数据库查询出错: " + e.message;
    }
} else {
    if (!runtime) {
        errorMsg = "本地预览模式：未检测到 Cloudflare Runtime (请使用 wrangler dev)";
    } else {
        errorMsg = "错误：找不到名为 'cpporigin' 的数据库绑定";
    }
}

const totalPages = Math.ceil(totalCount / pageSize);
const hasPrev = page > 1;
const hasNext = page < totalPages;

function formatTime(val: any) {
    if (!val) return '-';
    if (typeof val === 'number') return new Date(val * 1000).toISOString().split('T')[0];
    return val;
}
---

<html lang="zh-cn">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>C++ Source Viewer</title>
    <!-- 引入 PrismJS 用于代码高亮 (可选，让代码更好看) -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism-tomorrow.min.css" rel="stylesheet" />
</head>
<body>

<!-- 1. 背景层 -->
<div class="background-layer"></div>

<!-- 2. 内容层 -->
<main class="container">
    <h1 class="page-title">C++ Source Origins</h1>

    {errorMsg && (
            <div class="error-box">{errorMsg}</div>
    )}

    <div class="card-list">
        {dataList.map((item) => (
                <article class="code-card">
                    <div class="card-header">
                        <span class="id-tag">#{item.key}</span>
                        <span class="date-tag">{formatTime(item.timestamp || item.created_at)}</span>
                    </div>

                    <!-- 核心代码显示区域 -->
                    <!-- 假设你的数据库中存放代码的列名是 'content'，如果是其他名字请修改 -->
                    <div class="code-wrapper">
                        <pre><code class="language-cpp">{item.content || item.value || "无内容"}</code></pre>
                    </div>
                </article>
        ))}
    </div>

    <!-- 分页控件 -->
    <div class="pagination">
        {hasPrev ? <a href={`?page=${page - 1}`} class="btn">上一页</a> : <span class="btn disabled">上一页</span>}
        <span class="page-info">第 {page} / {totalPages} 页</span>
        {hasNext ? <a href={`?page=${page + 1}`} class="btn">下一页</a> : <span class="btn disabled">下一页</span>}
    </div>
</main>

<!-- PrismJS 脚本 -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/prism.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-c.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-cpp.min.js"></script>

</body>
</html>

<style>
/* 全局重置 */
* { box-sizing: border-box; margin: 0; padding: 0; }

body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    color: #e0e0e0;
    background-color: #121212;
    min-height: 100vh;
    position: relative;
}

/* --- 背景图设置 --- */
.background-layer {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    /* 这里填入你的图片 URL */
    background-image: url('/preview.jpg');
    background-size: cover;
    background-position: center;
    /* 添加一层黑色遮罩，让文字更清晰 */
    background-color: rgba(0, 0, 0, 0.6);
    background-blend-mode: overlay;
    filter: blur(2px); /* 稍微模糊背景，突出前景代码 */
}

/* --- 布局容器 --- */
.container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 40px 20px;
    z-index: 1;
}

.page-title {
    text-align: center;
    margin-bottom: 40px;
    font-size: 2.5rem;
    color: #fff;
    text-shadow: 0 2px 4px rgba(0,0,0,0.5);
}

.error-box {
    background: rgba(220, 53, 69, 0.8);
    color: white;
    padding: 15px;
    border-radius: 8px;
    margin-bottom: 20px;
    text-align: center;
}

/* --- 代码卡片样式 (关键部分) --- */
.code-card {
    background: rgba(30, 30, 30, 0.75); /* 半透明深色背景 */
    backdrop-filter: blur(10px); /* 毛玻璃效果 */
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    margin-bottom: 30px;
    overflow: hidden;
    box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
    transition: transform 0.2s;
}

.code-card:hover {
    transform: translateY(-2px);
    border-color: rgba(255, 255, 255, 0.3);
}

.card-header {
    padding: 10px 20px;
    background: rgba(0, 0, 0, 0.3);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    display: flex;
    justify-content: space-between;
    font-size: 0.9rem;
    color: #aaa;
}

.id-tag { font-weight: bold; color: #61dafb; }

/* --- 代码显示区域与换行设置 --- */
.code-wrapper {
    padding: 0; /* PrismJS 会自己加 padding */
    max-height: 500px; /* 限制最大高度，太长显示滚动条 */
    overflow-y: auto;
}

/* 覆盖 PrismJS 的默认样式以支持换行 */
pre[class*="language-"] {
    margin: 0 !important;
    border-radius: 0 !important;
    background: transparent !important; /* 使用卡片背景 */

    /* === 核心：强制换行 === */
    white-space: pre-wrap !important;
    word-break: break-all !important; /* 如果有超长单词(如很长的变量名)强制打断 */
    overflow-wrap: break-word !important;
}

code[class*="language-"] {
    font-family: 'Fira Code', 'Consolas', 'Monaco', monospace !important;
    font-size: 14px;
    line-height: 1.6; /* 增加行高，解决“太紧”的问题 */
    text-shadow: none !important;
}

/* --- 分页样式 --- */
.pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin-top: 40px;
}

.btn {
    padding: 10px 20px;
    background: rgba(255, 255, 255, 0.1);
    color: white;
    text-decoration: none;
    border-radius: 6px;
    transition: background 0.3s;
    border: 1px solid rgba(255, 255, 255, 0.2);
}

.btn:hover { background: rgba(255, 255, 255, 0.25); }
.btn.disabled { opacity: 0.5; pointer-events: none; }
.page-info { font-family: monospace; }

/* 滚动条美化 */
::-webkit-scrollbar { width: 8px; height: 8px; }
::-webkit-scrollbar-track { background: rgba(0,0,0,0.1); }
::-webkit-scrollbar-thumb { background: rgba(255,255,255,0.2); border-radius: 4px; }
::-webkit-scrollbar-thumb:hover { background: rgba(255,255,255,0.4); }
</style>