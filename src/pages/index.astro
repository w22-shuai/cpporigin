import type { D1Database } from '@cloudflare/workers-types';

// --- 1. 后端逻辑 ---
const runtime = Astro.locals.runtime;
let db: D1Database | null = null;
let errorMsg = "";
let dataList: any[] = [];
let totalCount = 0;

// 获取分页参数
const page = parseInt(Astro.url.searchParams.get('page') || '1');
const pageSize = 5;
const offset = (page - 1) * pageSize;

if (runtime && runtime.env && runtime.env.cpporigin) {
	db = runtime.env.cpporigin as D1Database;
}

if (db) {
	try {
		const result = await db.prepare(
			"SELECT * FROM cpporigin ORDER BY key DESC LIMIT ? OFFSET ?"
		).bind(pageSize, offset).all();
		dataList = result.results;

		const countRes = await db.prepare("SELECT COUNT(*) as count FROM cpporigin").first();
		totalCount = countRes?.count as number || 0;

	} catch (e: any) {
		errorMsg = "数据库错误: " + e.message;
	}
}

const totalPages = Math.ceil(totalCount / pageSize);
const hasPrev = page > 1;
const hasNext = page < totalPages;

function formatTime(val: any) {
	if (!val) return '';
	if (typeof val === 'number') return new Date(val * 1000).toISOString().split('T')[0];
	return val;
}
---

<html lang="zh-cn">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />

	<!-- 1. CSS 主题 (VS Code Dark Plus) -->
	<link href="https://cdn.jsdelivr.net/npm/prism-themes@1.9.0/themes/prism-vsc-dark-plus.min.css" rel="stylesheet" />

	<!-- 2. JS Beautify -->
	<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/js-beautify/1.14.7/beautify.min.js"></script>
</head>
<body>

<div class="bg-image"></div>

<main class="main-container">
<h1 class="page-title">C++ Source Origins</h1>

{errorMsg && <div class="error-msg">{errorMsg}</div>}

	<div class="card-list">
{dataList.map((item, index) => (
	<article class="code-card">
	<div class="card-header">
	<span class="id-tag">#{item.key}</span>
	<span class="date-tag">{formatTime(item.timestamp || item.created_at)}</span>
</div>

<div class="code-window">
<textarea id={`raw-code-${index}`} style="display:none;">
{item.content || item.value || ""}
</textarea>
<pre><code id={`target-code-${index}`} class="language-cpp"></code></pre>
</div>
</article>
))}

{dataList.length === 0 && !errorMsg && (
	<div class="empty-tip">暂无数据</div>
	)}
	</div>

	<div class="pagination">
{hasPrev ? <a href={`?page=${page - 1}`} class="page-btn">← 上一页</a> : <span class="page-btn disabled">← 上一页</span>}
	<span class="page-info">第 {page} / {totalPages || 1} 页</span>
{hasNext ? <a href={`?page=${page + 1}`} class="page-btn">下一页 →</a> : <span class="page-btn disabled">下一页 →</span>}
	</div>
	</main>

	<!-- ======================================================= -->
	<!-- 脚本区域 (保持修复后的顺序) -->
	<!-- ======================================================= -->

	<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/prism.min.js"></script>
	<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/plugins/autoloader/prism-autoloader.min.js"></script>

	<script is:inline define:vars={{ dataList }}>
document.addEventListener('DOMContentLoaded', () => {
	if (window.Prism && window.Prism.plugins.autoloader) {
		window.Prism.plugins.autoloader.languages_path = 'https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/';
	}

	dataList.forEach((_, index) => {
		const rawElement = document.getElementById(`raw-code-${index}`);
		const targetElement = document.getElementById(`target-code-${index}`);

		if (rawElement && targetElement) {
			let rawCode = rawElement.value.trim();
			if (typeof js_beautify !== 'undefined') {
				let formattedCode = js_beautify(rawCode, {
					indent_size: 4,
					space_in_empty_paren: true,
					brace_style: "collapse,preserve-inline"
				});
				targetElement.textContent = formattedCode;
			} else {
				targetElement.textContent = rawCode;
			}
			if (window.Prism) {
				Prism.highlightElement(targetElement);
			}
		}
	});
});
</script>
</body>
</html>

<style>
/* === 基础全局样式 === */
* { box-sizing: border-box; margin: 0; padding: 0; }

body {
	font-family: Consolas, 'Courier New', monospace;
	/* 背景色改为透明，依靠 bg-image */
	background-color: #1e1e1e;
	color: #d4d4d4;
	min-height: 100vh;
}

/* === [核心修改] 背景图变亮 === */
.bg-image {
	position: fixed;
	top: 0; left: 0; width: 100%; height: 100%;
	z-index: -1;
	/* 这里使用你那张悬崖和阳光的图片 URL */
	background-image: url('https://images.unsplash.com/photo-1555066931-4365d14bab8c?q=80&w=2070&auto=format&fit=crop');
	background-size: cover;
	background-position: center;

	/*
       1. 透明度改为 0.2 (原来是 0.85)，只保留一点点黑色让文字能看清
       2. 混合模式改为 normal，不再让图片变暗
    */
	background-color: rgba(0, 0, 0, 0.2);
	background-blend-mode: normal;

	/* 稍微保留一点模糊，或者你可以改成 0px 彻底清晰 */
	filter: blur(2px);
}

.main-container {
	max-width: 950px;
	margin: 0 auto;
	padding: 40px 20px;
}

.page-title {
	text-align: center;
	margin-bottom: 40px;
	font-size: 2.5rem; /* 字体加大 */
	color: #fff;
	font-weight: bold;
	/* 加重阴影，防止背景太亮导致标题看不清 */
	text-shadow: 0 5px 15px rgba(0,0,0,0.9);
	letter-spacing: 2px;
}

.error-msg {
	background: #5a1d1d; color: #fff; padding: 10px;
	text-align: center; margin-bottom: 20px; border-radius: 4px;
}
.empty-tip { text-align: center; padding: 20px; color: #fff; text-shadow: 0 2px 4px rgba(0,0,0,0.8); }

/* === 卡片保持深色，形成对比 === */
.code-card {
	background: #1e1e1e; /* 保持深色背景 */
	border: 1px solid #333;
	border-radius: 6px;
	margin-bottom: 40px;
	/* 增加卡片阴影，让它在亮背景上浮起来 */
	box-shadow: 0 15px 40px rgba(0,0,0,0.6);
	overflow: hidden;
}

.card-header {
	background: #252526;
	padding: 8px 15px;
	display: flex;
	justify-content: space-between;
	font-size: 0.85rem;
	color: #cccccc;
	border-bottom: 1px solid #1e1e1e;
}

.id-tag { color: #4ec9b0; font-weight: bold; }
.date-tag { color: #858585; }

.code-window {
	padding: 0;
	max-height: 600px;
	overflow: auto;
}

pre[class*="language-"] {
	margin: 0 !important;
	padding: 15px !important;
	background: #1e1e1e !important;
	text-shadow: none !important;
	white-space: pre !important;
	font-size: 14px !important;
	line-height: 1.5 !important;
}

code[class*="language-"], pre[class*="language-"] {
	font-family: Consolas, 'Courier New', monospace !important;
	font-weight: bold !important;
}

.code-window::-webkit-scrollbar { width: 10px; height: 10px; }
.code-window::-webkit-scrollbar-track { background: #1e1e1e; }
.code-window::-webkit-scrollbar-thumb { background: #424242; }
.code-window::-webkit-scrollbar-thumb:hover { background: #4f4f4f; }

.pagination {
	display: flex;
	justify-content: center;
	align-items: center;
	gap: 20px;
	margin-top: 40px;
	margin-bottom: 60px;
	/* 增加阴影，确保文字在亮背景上可见 */
	text-shadow: 0 2px 5px rgba(0,0,0,0.8);
	color: #fff;
	font-weight: bold;
}

.page-btn {
	display: inline-block;
	padding: 8px 16px;
	background-color: rgba(45, 45, 48, 0.9); /* 按钮也加深一点不透明度 */
	color: #fff;
	text-decoration: none;
	border: 1px solid #555;
	border-radius: 4px;
	font-size: 0.9rem;
	transition: all 0.2s;
	box-shadow: 0 4px 10px rgba(0,0,0,0.3);
	text-shadow: none;
}

.page-btn:hover {
	background-color: #3e3e42;
	border-color: #fff;
	transform: translateY(-2px);
}

.page-btn.disabled {
	opacity: 0.6;
	cursor: not-allowed;
	pointer-events: none;
	background-color: #252526;
	border-color: #333;
}

.page-info {
	font-size: 1rem;
}
</style>