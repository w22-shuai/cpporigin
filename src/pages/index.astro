import type { D1Database } from '@cloudflare/workers-types';

// 1. 初始化变量
const runtime = Astro.locals.runtime;
let db: D1Database | null = null;
let errorMsg = "";
let dataList: any[] = [];

// 2. 连接数据库
if (runtime && runtime.env && runtime.env.cpporigin) {
	db = runtime.env.cpporigin as D1Database;
}

// 3. 执行查询 (移除分页逻辑，直接查最新的 50 条或 100 条)
if (db) {
	try {
		// 假设你要看最新的数据，按 key 倒序排列
		// 如果想看全部，可以把 LIMIT 去掉，但建议保留以防数据太多炸浏览器
		const result = await db.prepare(
			"SELECT * FROM cpporigin ORDER BY key DESC LIMIT 50"
		).all();
		dataList = result.results;
	} catch (e: any) {
		errorMsg = "数据库查询出错: " + e.message;
	}
} else if (!runtime) {
	errorMsg = "本地预览模式：未检测到 Cloudflare Runtime";
}

// 时间格式化工具
function formatTime(val: any) {
	if (!val) return '';
	if (typeof val === 'number') return new Date(val * 1000).toISOString().split('T')[0];
	return val;
}
---

<html lang="zh-cn">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<title>C++ Source Viewer</title>
	<!-- 代码高亮主题 -->
	<link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism-tomorrow.min.css" rel="stylesheet" />
</head>
<body>

<!-- 背景层 -->
<div class="bg-image"></div>

<main class="main-container">
	<h1 class="page-title">C++ Source Origins</h1>

	{errorMsg && <div class="error-msg">{errorMsg}</div>}

	<div class="card-list">
		{dataList.map((item) => (
			<article class="code-card">
				<div class="card-header">
					<span class="id-tag">#{item.key}</span>
					<span class="date-tag">{formatTime(item.timestamp || item.created_at)}</span>
				</div>

				<!-- 代码显示区域 -->
				<div class="code-wrapper">
					<!-- language-cpp 用于高亮 -->
					<pre><code class="language-cpp">{item.content || item.value || "// 无内容"}</code></pre>
				</div>
			</article>
		))}

		{dataList.length === 0 && !errorMsg && (
			<div class="empty-tip">暂无数据</div>
		)}
	</div>

	<!-- 底部简单的结束语，替代分页 -->
	<div class="footer-note">End of List</div>
</main>

<!-- PrismJS 脚本 -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/prism.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-c.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-cpp.min.js"></script>
</body>
</html>

<style>
/* === 全局样式 === */
* { box-sizing: border-box; margin: 0; padding: 0; }

body {
	font-family: Consolas, 'Courier New', monospace;
	background-color: #0d1117;
	color: #e6edf3;
	min-height: 100vh;
	position: relative;
}

/* === 背景图 === */
.bg-image {
	position: fixed;
	top: 0; left: 0; width: 100%; height: 100%;
	z-index: -1;
	/* 替换为你喜欢的背景图 */
	background-image: url('https://images.unsplash.com/photo-1555066931-4365d14bab8c?q=80&w=2070&auto=format&fit=crop');
	background-size: cover;
	background-position: center;
	background-color: rgba(0, 0, 0, 0.7); /* 黑色遮罩 */
	background-blend-mode: overlay;
	filter: blur(3px); /* 背景模糊 */
}

/* === 容器布局 === */
.main-container {
	max-width: 900px;
	margin: 0 auto;
	padding: 40px 20px;
}

.page-title {
	text-align: center;
	margin-bottom: 40px;
	font-size: 2.2rem;
	color: #fff;
	text-shadow: 0 2px 8px rgba(0,0,0,0.6);
}

.error-msg {
	background: rgba(220, 38, 38, 0.8);
	padding: 15px;
	border-radius: 6px;
	margin-bottom: 20px;
	text-align: center;
}

/* === 卡片样式 === */
.code-card {
	background: rgba(22, 27, 34, 0.8);
	backdrop-filter: blur(10px);
	border: 1px solid rgba(255, 255, 255, 0.1);
	border-radius: 10px;
	margin-bottom: 30px;
	overflow: hidden;
	box-shadow: 0 4px 15px rgba(0,0,0,0.5);
}

.card-header {
	background: rgba(255, 255, 255, 0.05);
	padding: 10px 15px;
	border-bottom: 1px solid rgba(255, 255, 255, 0.05);
	display: flex;
	justify-content: space-between;
	color: #8b949e;
	font-size: 0.9rem;
}

.id-tag { color: #58a6ff; font-weight: bold; }

/* === 代码区域核心样式 (控制换行与滚动) === */
.code-wrapper {
	/* 限制最大高度，内容过多时出现垂直滚动条 */
	max-height: 500px;
	overflow-y: auto;
	/* 禁止横向滚动 */
	overflow-x: hidden;
}

/* 强制 PrismJS 换行，覆盖默认的不换行行为 */
.code-wrapper pre {
	margin: 0 !important;
	padding: 15px !important;
	background: transparent !important;

	/* 核心代码：强制换行 */
	white-space: pre-wrap !important;
	word-wrap: break-word !important;
	word-break: break-all !important;
}

.code-wrapper code {
	font-family: 'JetBrains Mono', Consolas, monospace !important;
	font-size: 14px;
	line-height: 1.6; /* 增加行间距 */
	text-shadow: none !important;
}

/* === 滚动条美化 === */
.code-wrapper::-webkit-scrollbar { width: 8px; }
.code-wrapper::-webkit-scrollbar-track { background: transparent; }
.code-wrapper::-webkit-scrollbar-thumb { background: rgba(255, 255, 255, 0.2); border-radius: 4px; }
.code-wrapper::-webkit-scrollbar-thumb:hover { background: rgba(255, 255, 255, 0.4); }

.footer-note {
	text-align: center;
	color: rgba(255,255,255,0.3);
	margin-top: 40px;
	font-size: 0.8rem;
}
.empty-tip { text-align: center; color: #888; padding: 20px; }
</style>